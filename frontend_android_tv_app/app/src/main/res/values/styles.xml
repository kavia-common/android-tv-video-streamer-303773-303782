<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for Android TV (light, modern accents) -->
    <style name="AppTheme" parent="Theme.Leanback">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorPrimary">#3B82F6</item>
        <item name="android:colorAccent">#06B6D4</item>

        <!-- Basic button theming (kept simple for TV readability) -->
        <item name="android:buttonStyle">@style/TvButton</item>
    </style>

    <style name="TvButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_tv_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
    </style>
</resources>
