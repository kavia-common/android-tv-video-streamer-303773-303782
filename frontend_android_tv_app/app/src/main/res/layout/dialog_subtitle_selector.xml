<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subtitle_dialog_root"
    android:layout_width="560dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/subtitle_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subtitles"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#111827"
        android:paddingBottom="12dp" />

    <ListView
        android:id="@+id/subtitle_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#E5E7EB"
        android:dividerHeight="1dp"
        android:choiceMode="singleChoice"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <TextView
        android:id="@+id/subtitle_dialog_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DPAD: Up/Down select • OK confirm • Back cancel"
        android:textSize="14sp"
        android:textColor="#64748B"
        android:paddingTop="14dp" />

</LinearLayout>
