<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_root"
    android:layout_width="260dp"
    android:layout_height="180dp"
    android:layout_marginEnd="14dp"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/card_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Video thumbnail"/>

        <!-- Favorites heart overlay (hidden by default) -->
        <FrameLayout
            android:id="@+id/card_favorite_badge"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_favorite_badge"
            android:visibility="gone">

            <ImageView
                android:id="@+id/card_favorite_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_heart"
                android:contentDescription="Favorite" />
        </FrameLayout>

        <!-- Continue Watching progress overlay (hidden by default) -->
        <LinearLayout
            android:id="@+id/card_progress_container"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:background="#33000000"
            android:visibility="gone">

            <View
                android:id="@+id/card_progress_fill"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#3B82F6" />

            <View
                android:id="@+id/card_progress_rest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <View
            android:id="@+id/card_focus_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
    </FrameLayout>

    <TextView
        android:id="@+id/card_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Title"
        android:textColor="#111827"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingTop="6dp"/>
</LinearLayout>
