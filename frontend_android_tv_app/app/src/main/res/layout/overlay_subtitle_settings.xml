<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subtitle_settings_overlay"
    android:layout_width="520dp"
    android:layout_height="wrap_content"
    android:layout_gravity="top|end"
    android:layout_marginTop="96dp"
    android:layout_marginEnd="48dp"
    android:orientation="vertical"
    android:paddingStart="18dp"
    android:paddingEnd="18dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="#EE111827"
    android:visibility="gone"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/subtitle_settings_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subtitles"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:paddingBottom="10dp" />

    <ListView
        android:id="@+id/subtitle_settings_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#33FFFFFF"
        android:dividerHeight="1dp"
        android:choiceMode="singleChoice"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <TextView
        android:id="@+id/subtitle_settings_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="S: toggle • Long-press OK: toggle • OK: pick • Back: close"
        android:textSize="12sp"
        android:textColor="#B3FFFFFF"
        android:paddingTop="10dp" />

</LinearLayout>
