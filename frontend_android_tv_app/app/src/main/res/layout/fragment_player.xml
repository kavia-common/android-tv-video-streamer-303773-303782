<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <!-- Next Up overlay (shown when playback ends) -->
    <LinearLayout
        android:id="@+id/nextup_overlay"
        android:layout_width="560dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="140dp"
        android:orientation="vertical"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/bg_nextup_panel"
        android:visibility="gone"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/nextup_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Up Next"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:paddingBottom="10dp" />

        <LinearLayout
            android:id="@+id/nextup_content_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nextup_thumbnail"
                android:layout_width="200dp"
                android:layout_height="112dp"
                android:scaleType="centerCrop"
                android:contentDescription="Next up thumbnail" />

            <LinearLayout
                android:id="@+id/nextup_text_col"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="14dp">

                <TextView
                    android:id="@+id/nextup_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next video title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/nextup_countdown_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Playing in 5s"
                    android:textSize="14sp"
                    android:textColor="#B3FFFFFF"
                    android:paddingTop="6dp" />

                <ProgressBar
                    android:id="@+id/nextup_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"
                    android:max="1000"
                    android:progress="1000"
                    android:progressDrawable="@drawable/progress_nextup_countdown" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nextup_buttons_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="14dp">

            <Button
                android:id="@+id/btn_nextup_play_now"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Play Now"
                android:textAllCaps="false"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <Button
                android:id="@+id/btn_nextup_cancel"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Cancel"
                android:textAllCaps="false"
                android:focusable="true"
                android:focusableInTouchMode="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/nextup_dpad_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DPAD: Left/Right change • OK Play Now • Up Cancel"
            android:textColor="#B3FFFFFF"
            android:textSize="12sp"
            android:paddingTop="10dp" />
    </LinearLayout>

    <!-- Subtitle settings overlay (coexists with controls + Next Up) -->
    <include
        android:id="@+id/include_subtitle_settings"
        layout="@layout/overlay_subtitle_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Controls overlay (auto-hide) -->
    <LinearLayout
        android:id="@+id/controls_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp"
        android:paddingTop="16dp"
        android:background="#AA000000">

        <TextView
            android:id="@+id/player_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Now Playing"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00 / 00:00"
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>

            <SeekBar
                android:id="@+id/progress_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/volume_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vol 100%"
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="140dp"
                android:layout_height="52dp"
                android:text="Back"
                android:textAllCaps="false"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <Button
                android:id="@+id/btn_rewind"
                android:layout_width="170dp"
                android:layout_height="52dp"
                android:layout_marginStart="12dp"
                android:text="-10s"
                android:textAllCaps="false"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <Button
                android:id="@+id/btn_play_pause"
                android:layout_width="200dp"
                android:layout_height="52dp"
                android:layout_marginStart="12dp"
                android:text="Play/Pause"
                android:textAllCaps="false"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <Button
                android:id="@+id/btn_forward"
                android:layout_width="170dp"
                android:layout_height="52dp"
                android:layout_marginStart="12dp"
                android:text="+10s"
                android:textAllCaps="false"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <Button
                android:id="@+id/btn_mute"
                android:layout_width="170dp"
                android:layout_height="52dp"
                android:layout_marginStart="12dp"
                android:text="Mute"
                android:textAllCaps="false"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
        </LinearLayout>

        <TextView
            android:id="@+id/player_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DPAD: Left/Right seek, Up/Down volume, Center play/pause. M mute. S or long-press OK: subtitles. Back exit."
            android:textColor="#B3FFFFFF"
            android:textSize="12sp"
            android:paddingTop="10dp"/>
    </LinearLayout>

</FrameLayout>
